/* Chapter 9: Example 4 of Academic salary by department */

title 'Chapter 9, Example 4'; 
proc import datafile='c:\ccwa\chap09\data\c0904dt.txt' out=c0904 dbms=tab replace;
getnames=yes;
run;
data cc0904;
set c0904;
d1=0;
if depart=2 then d1=1;
d2=0;
if depart=3 then d2=1;
pubd=pub-15.5;
pd1=pubd*d1;
pd2=pubd*d2;
d1_e=-1;
if depart=2 then d1_e=1;
if depart=3 then d1_e=0;
d2_e=-1;
if depart=3 then d2_e=1;
if depart=2 then d2_e=0;
pd1_e=pubd*d1_e;
pd2_e=pubd*d2_e;
d1_c=0.333;
if depart=1 then d1_c=0.667;
d2_c=0;
if depart=2 then d2_c=-0.5;
if depart=3 then d2_c=0.5;
pd1_c=pubd*d1_c;
pd2_c=pubd*d2_c;
output;
proc reg data=cc0904;
model salary=d1 d2 pub;
run;
proc reg data=cc0904;
model salary=d1 d2 pub pd1 pd2;
run;
proc reg data=cc0904;
model salary=d1_e d2_e pubd;
run;
proc reg data=cc0904;
model salary=d1_e d2_e pubd pd1_e pd2_e;
run;
proc reg data=cc0904;
model salary=d1_c d2_c pubd;
run;
proc reg data=cc0904;
model salary=d1_c d2_c pubd pd1_c pd2_c;
run;
